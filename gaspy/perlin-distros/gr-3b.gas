/*
# seed factor (seeds/mÂ²), perlin offset, perlin spread, templates, size (from, to, additional perlin factor)
*/

[perlin_plant_profile]
{
    // defaults
    size = 0.8 1.2;

    // trunks
    [*] { seed = 0.02, -1, 4; templates = tree_jng_trunk_sm tree_jng_trunk_lg tree_jng_trunk_split_2 tree_jng_trunk_split_3; }
    // trees
    [*] { seed = 0.12, -0.25, 3; templates = tree_glb_sway_4m tree_glb_sway_6m tree_grs_deciduous_sway_02 tree_grs_deciduous_sway_01; }
    [*] { seed = 0.06, -0.25, 3; templates = tree_grs_sapling_01; }
    // bushes
    [*] { seed = 0.1, 0, 2; templates = bush_grs_rhod_01 bush_grs_rhod_02 bush_grs_rhod_03 bush_grs_rhod_04; }
    [*] { seed = 0.1, 0, 2; templates = bush_grs_button_01 bush_grs_button_02 bush_grs_04 bush_jng_08; }
    [*] { seed = 0.02, -1, 3; templates = bush_jng_10; }  // this one's quite large
    // flowers
    [*] { seed = 0.2, 0, 1.5; templates = flowers_grs_05 flowers_grs_06 flowers_grs_08; }
    // groundcover
    [*] { seed = 0.1, 0.25, 1; templates = foliage_grs_01; }
    [*] { seed = 0.1, 0.5, 1; templates = groundcover_grs_01 groundcover_grs_02 groundcover_grs_03; }
    [*] { seed = 0.1, 0.25, 1; templates = bush_jng_03 bush_jng_04 bush_jng_05 bush_jng_06 bush_jng_07 bush_jng_09; }  // these are called bushes but are really flat
}
