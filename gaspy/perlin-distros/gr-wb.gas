[perlin_plant_profile]
{
    // defaults
    size = 0.8 1.2 0.2;

    // trunks
    [*] { seed = 0.05, -1, 4; templates = tree_swp_08; }
    // trees
    [*] { seed = 0.1, -0.25, 4; templates = tree_swp_07; }
    [*] { seed = 0.03, -0.25, 4; templates = tree_grs_deciduous_sway_01 tree_grs_deciduous_sway_04; }
    // bushes
    [*] { seed = 0.3, 0, 3; templates = bush_grs_rhod_01 bush_grs_rhod_02 bush_grs_rhod_03 bush_grs_rhod_04; }
    // flowers & small plants
    [*] { seed = 0.1, 0.25, 3; templates = bush_grs_04 bush_swp_02; }
    [*] { seed = 0.07, 0.25, 1; templates = mushroom_glb_03 mushroom_glb_03 mushroom_glb_05; size = 2.4 3.6 1; }
    // groundcover / grass
    [*] { seed = 0.1, 0, 2; templates = reed_swp_04 reed_swp_05 reed_swp_07 reed_swp_08; }
    [*] { seed = 0.2, 0.5, 4; templates = groundcover_grs_01 groundcover_grs_06 foliage_grs_01; }
}
