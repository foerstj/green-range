[perlin_plant_profile]
{
    // defaults
    size = 0.8 1.2 0.1;

    // trunks
    [*] { seed = 0.1, -1, 3; templates = tree_grs_pine_trunk_sm; }
    // trees
    [*] { seed = 0.1, -0.5, 3; templates = tree_glb_sway_4m tree_glb_sway_6m tree_glb_sway_9m; }
    // bushes
    [*] { seed = 0.1, 0, 3; templates = bush_grs_rhod_01 bush_grs_rhod_02 bush_grs_rhod_03 bush_grs_rhod_04; }
    // flowers
    [*] { seed = 0.1, 0.5, 3; templates = flowers_grs_04 flowers_grs_05 flowers_grs_06 flowers_grs_07 flowers_grs_08; }
    // grass
    [*] { seed = 0.1, 1, 3; templates = grass_grs_01 grass_grs_02 grass_grs_03 grass_grs_06 grass_grs_07 grass_grs_08; }
}
