			gr_frag_phrak_black_03 = 2;
			gr_frag_phrak_black_04 = 1;
			gr_frag_phrak_black_05 = 2;
		}
	}

    // stats from dsx_leetch
	[actor]
	{
		[skills]
		{
		  strength     = 12, 0;
		  intelligence = 7, 0;
		  dexterity    = 9, 0;
		  melee        = 8, 0;
		}
	}
	[aspect]
	{
		experience_value = 120;
		life             = 118;
		max_life         = 118;
		mana             = 45;
		max_mana         = 45;
    }
	[attack]
