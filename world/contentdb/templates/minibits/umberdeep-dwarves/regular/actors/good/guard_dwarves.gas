[t:template,n:gr_base_dwarf_guard]
{
    specializes = base_dwarf_npc;
	category_name = "1W_character";

	[aspect]
	{
		is_collidable = true;
    }
	[common]
	{
		screen_name = "Guard";
	}
	[inventory]
	{
		[equipment]
		{
			es_chest = gr_armor_dwarves; // Umberdeep Guard Armor
			es_feet = bo_bo_ch_f_g_c_avg; // Chain Boots
			es_head = he_ca_pl_f_alloy_dsx; // DSX Alloy Dome
			es_weapon_hand = ax_g_c_2h1b_avg; // Field Axe
		}
	}
    [mind]
    {
        jat_talk = world\ai\jobs\common\job_talk.skrit;
    }
}

