[t:template,n:soul_stinger_base]  // = soul_stinger
{
	category_name = "1W_evil_d";
	doc = "soul_stinger";
	specializes = actor_evil;
	[actor]
	{
		[skills]
		{
			strength =  	9, 0;
			intelligence =  4, 0;
			dexterity =  	15, 0;
			melee =  		17, 0;
		}
	}
	[aspect]
	{
		experience_value = 11000;
		life = 560;
		max_life = 560;
		mana = 10;
		max_mana = 10;
		model = m_c_edm_ss_pos_1;
