[t:template,n:klaw_base]  // = klaw
{
	category_name = "1W_evil_d";
	doc = "klaw";
	specializes = base_klaw;
	[actor]
	{
		[skills]
		{
			strength =  13, 0;
			intelligence =  8, 0;
			dexterity =  12, 0;
            melee =  7,  0;
		}
	}
	[aspect]
	{
		experience_value = 130;
		life = 202;
        max_life = 202;
        mana = 18;
		max_mana = 18;
	}
	[attack]
	{
		attack_range = 0.5;
		damage_max = 54;
		damage_min = 46;
	}
	[common]
	{
		screen_name="Klaw";
		membership = party_klaw_boss, monster;
	}
    [defend] { defense=80; }
   	[inventory]
	{
    	[pcontent]
		{
			[oneof*]
			{
				[oneof*]
				{
				   chance = 0.05;
				   il_main = potion_health_small;
				   il_main = potion_mana_small;
				}
				[all*]
				{
       				chance = 0.02;
	                il_main = #spell/6-13;
				}

				[oneof*]
				{
					chance = 0.2;
					il_main = #*/26-33;
					il_main = #armor/13-66;
	                il_main = #weapon/26-33;
				}
				[oneof*]
				{
	                   chance = 0.004;
	                   il_main = #weapon/-rare(1)/34-41;
	                   il_main = #armor/-rare(1)/80-115;
                       il_main = #*/-rare(1)/34-41;
                }
				[oneof*]
				{
                       chance = 0.002;
	                   il_main = #weapon/-unique(2)/34-41;
	                   il_main = #armor/-unique(2)/80-115;
                       il_main = #*/-unique(2)/34-41;
	            }
				[gold*]
				{
					chance = 0.15;
					max = 150;
					min = 80;
				}
			}
		}
	}
	[mind]
	{
		jat_brain							= world\ai\jobs\common\brain_hero.skrit
			?actor_joins_existing_party			= true;
	}
}

[t:template,n:gr_klaw_rain] { specializes = gr_klaw_rain_base; }
[t:template,n:gr_klaw_rain_base]
{
    specializes = klaw_base;

    [common]
    {
        screen_name = "Rain Klaw";
    }
    [aspect]
    {
        scale_base = 0.7;
		[voice]
		{
			[die]			{ priority = high; * = s_e_die_klaw_small_SED; }
			[enemy_spotted]	{ priority = high; * = s_e_call_klaw_small_SED; }
			[hit_critical]	{ priority = low; * = s_e_hit_klaw_small_SED; }
			[hit_glance]	{ priority = low; * = s_e_hit_klaw_small_SED; }
			[hit_solid]		{ priority = low; * = s_e_hit_klaw_small_SED; }
		}
    }
}
