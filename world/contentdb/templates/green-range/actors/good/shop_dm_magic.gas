    specializes = gr_base_shop_dm_magic;

    [common]
    {
        screen_name = "Conjuror Klarin Umberdeep";
    }
    [inventory]
    {
        [equipment]
        {
            es_chest = bd_ro_m_g_c_029;
        }
    }
}
